<!DOCTYPE html>
<html>
  <head>
    <title>Hesperides</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tag %>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
  </head>
  <body id="<%= controller.controller_name %>" class="<%= controller.action_name %>">
    <div class="wrapper">
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button class="button navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Hesperides</a>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right"></ul>
          </div>
        </div>
      </nav>
      <div class="container">
      <% flash.each do |name, msg| %>
        <div class="alert alert-dismissable <%= alert_class(name) %>">
        <button class="close" type="button" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= raw(msg) %>
        </div>
      <% end %>
      <%= yield %>
      </div>
    </div>
    <footer>
      <div class="container">
      <p>&copy; <%= Date.current.year %> All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

